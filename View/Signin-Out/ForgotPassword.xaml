<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThinkBay.View.Signin_Out.ForgotPassword"
             xmlns:local="clr-namespace:ThinkBay" BackgroundColor="Black"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             Title="ForgotPassword">
    <Grid VerticalOptions="Center" RowDefinitions="auto,auto,auto,auto,auto" Background="Black">
        <Label   Margin="20,0,20,20" Grid.Row="0" HorizontalOptions="Center" TextColor="Yellow" FontSize="30" Text="{Binding Forgot_Header, Source={Static local:App.T_Message}}" />
        <Label   Margin="20,0,20,20" Grid.Row="1" TextColor="White" FontSize="13" HorizontalTextAlignment="Center" Text="{Binding Forgot_Desc, Source={Static local:App.T_Message}}" />
        <uranium:TextField Grid.Row="2" Margin="20,20,20,20" BorderColor="DimGrey" BackgroundColor="Black" Title="Email" TitleColor="White" />
        <Button Grid.Row="3" Text=" Send Code" Margin="20,10,20,20 " FontSize="18" TextColor="Black" FontAttributes="Bold" BackgroundColor="Yellow"/>
        
    </Grid>
</ContentPage>